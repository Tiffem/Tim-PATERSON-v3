{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<form method="post" class="pb-5" style="padding-bottom:100px !important; text-align:center;">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-2 font-weight-normal">Veuillez vous connecter</h1>
    <label for="inputUsername" class="col-s col-form-label">Pseudo</label>
    <div class=" ">
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" style="width:200px; margin: 0 auto;" autocomplete="username" required autofocus>
    </div>
    <label for="inputPassword">Mot de passe</label>
    <div class=" ">
        <input type="password" name="password" id="inputPassword" class="form-control" style="width:200px; margin: 0 auto;" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token" class=""
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html  #}

        <div class="checkbox mb-2">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
  
    <div class=" " style="margin-top: 50px;">
        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
        <br/>
        <br/>
    </div>
</form>
{% endblock %}
